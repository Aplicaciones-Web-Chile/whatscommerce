{
    "name": "aplicacionesweb/whatscommerce",
    "description": "Plugin de WordPress para ventas a travÃ©s de WhatsApp integrado con WooCommerce",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=7.4",
        "twilio/sdk": "^6.0",
        "monolog/monolog": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.4",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "WhatsCommerce\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WhatsCommerce\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "parallel-lint . --exclude vendor",
        "phpcs": "phpcs --standard=WordPress",
        "phpcbf": "phpcbf --standard=WordPress"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}